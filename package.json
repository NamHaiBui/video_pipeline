{
  "name": "my-portable-ytdlp-app",
  "version": "1.0.0",
  "description": "A portable Node.js app to wrap yt-dlp and ffmpeg",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx src/index.ts",
    "server": "tsx src/server.ts",
    "server:build": "npm run build && node dist/server.js",
    "setup": "tsx src/scripts/setup_binaries.ts",
    "postinstall": "tsx src/scripts/setup_binaries.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "yt-dlp",
    "ffmpeg",
    "node",
    "downloader",
    "aws"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "progress": "^2.0.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.29",
    "@types/progress": "^2.0.7",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
